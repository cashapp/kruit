    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "lib": [
      "es6",
      "dom"
    ],
    "target": "es6"
  },
  "include": [
    "src/**/*"
  ]
}
